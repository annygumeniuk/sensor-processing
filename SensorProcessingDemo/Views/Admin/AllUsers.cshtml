@model List<SensorProcessingDemo.Models.User>

@{
    ViewData["Title"] = "User List";
}

<h2>User List</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Action</th>
            
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            int index = 1;
            @foreach (var user in Model)
            {
                <tr>
                    <td>@index</td>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.Email</td>
                    <td>@user.Role</td>
                    <td>
                        <form asp-action="ChangeUserRole" asp-controller="Admin" method="post">
                            <input type="hidden" name="userId" value="@user.Id" />
                            <button type="submit" class="btn btn-danger">Change Role</button>
                        </form>
                    </td>

                </tr>
                index++;
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center">No users found.</td>
            </tr>
        }
    </tbody>
</table>
